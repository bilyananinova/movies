<section class="addMovie">
    <h3>Add Movie</h3>

    <form action="/create" method="POST">
        <label for="name">Enter movie name:</label>
        <input type="text" name="name" id="name" placeholder="Title..." value="{{movie.name}}">

        <label for="description">Enter movie description:</label>
        <textarea name="description" id="description" placeholder="Description...">{{movie.description}}</textarea>

        <label for="img">Enter movie image URL:</label>
        <input type="text" name="img" id="img" placeholder="Image..." value="{{movie.img}}">

        <input type="submit" value="Add Movie!">
    </form>

</section>