<section class="details">
    <h3>Movie Title: {{movie.name}}</h3>

    <div class="movieDetails">

        <div class="moviePoster">
            <img src="{{movie.img}}">
        </div>
        <div class="movieInfo">
            <p>{{movie.description}}</p>
            <a href="/edit/{{movie._id}}" class="editBtn">Edit</a>
            <a href="/delete/{{movie._id}}" class="delBtn">Delete</a>
        </div>

    </div>

</section>