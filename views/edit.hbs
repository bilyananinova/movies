<section class="editMovie">
    <h3>Edit Movie</h3>

    <form method="POST">
        <label for="movieName">Edit movie name:</label>
        <input type="text" name="name" placeholder="Title..." value="{{movie.name}}">

        <label for="movieDescription">Edit movie description:</label>
        <input type="text" name="description" placeholder="Description..." value="{{movie.description}}">

        <label for="movieImg">Edit movie image URL:</label>
        <input type="text" name="img" placeholder="Image..." value="{{movie.img}}">

        <input type="submit" value="Edit Movie!">
    </form>

</section>